            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "benefits": {
                      "type": "string"
                    },
                    "overview": {
                      "type": "string"
                    },
                    "units": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "name": {
                            "type": "string"
                          },
                          "benefits": {
                            "type": "string"
                          },
                          "overview": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "update the referenced complete curriculum programme",
        "tags": [
          "CCP"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ccp updated",
            "examples": {
              "application/json": {
                "ccp": {
                  "name": "CCP 4",
                  "overview": "Overview",
                  "benefits": "Benefits",
                  "id": 1
                }
              }
            }
          },
          "400": {
            "description": "invalid ccp"
          }
        }
      }
    },
