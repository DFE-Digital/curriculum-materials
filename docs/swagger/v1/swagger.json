        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ccp found",
            "examples": {
              "application/json": {
                "name": "CCP 3",
                "overview": "Overview",
                "benefits": "Benefits",
                "id": 1,
                "units": [
                  {
                    "name": "Unit 1",
                    "overview": "Overview",
                    "benefits": "Benefits",
                    "id": 1
